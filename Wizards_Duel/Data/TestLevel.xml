		#.....#
		#.....#
		###.###
		<exit x="3" y="7" direction="S"/>
		<end x="3" y="4"/>
		<object ref="bp_fire_entrance" x="3" y="3" probability="1.0"/>
		<object ref="bp_fire_carpet1" x="1" y="5" probability="0.5"/>
	</block>
	<block id="b_room" width="5" height="5" occurs="1" variations="F,CW,CCW">
